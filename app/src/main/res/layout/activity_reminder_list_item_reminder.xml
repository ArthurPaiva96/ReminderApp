<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/activity_reminder_list_item_reminder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        tools:text="Title" />

    <TextView
        android:id="@+id/activity_reminder_list_item_reminder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_reminder_list_item_reminder_title"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="12sp"
        tools:text="Description" />

    <TextView
        android:id="@+id/activity_reminder_list_item_reminder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_reminder_list_item_reminder_description"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        tools:text="12/12/2020" />

    <TextView
        android:id="@+id/activity_reminder_list_item_reminder_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_reminder_list_item_reminder_description"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/activity_reminder_list_item_reminder_date"
        android:textSize="12sp"
        tools:text="20:10" />


</RelativeLayout>